{
  "name": "@nimata/adapters",
  "version": "0.1.0",
  "description": "NÃ¬mata adapter implementations (file system, config, etc.)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./wizards/project-wizard": {
      "import": "./dist/wizards/project-wizard.js",
      "types": "./dist/wizards/project-wizard.d.ts"
    },
    "./template-engine": {
      "import": "./dist/template-engine.js",
      "types": "./dist/template-engine.d.ts"
    },
    "./project-generator": {
      "import": "./dist/project-generator.js",
      "types": "./dist/project-generator.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --build --watch",
    "test": "bun test",
    "test:unit": "bun test tests/unit/",
    "test:integration": "bun test tests/integration/",
    "test:coverage": "bun test --coverage",
    "test:mutation": "stryker run",
    "test:watch": "bun test --watch",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "clean": "rm -rf dist node_modules reports .stryker-tmp coverage"
  },
  "dependencies": {
    "@inquirer/checkbox": "^4.3.0",
    "@inquirer/confirm": "^5.1.19",
    "@inquirer/input": "^4.2.5",
    "@inquirer/prompts": "^7.9.0",
    "@inquirer/select": "^4.4.0",
    "@nimata/core": "workspace:*",
    "handlebars": "^4.7.8",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.8.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.3.0"
  }
}
