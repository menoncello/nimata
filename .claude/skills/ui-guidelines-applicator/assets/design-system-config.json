{
  "name": "UI Guidelines Design System",
  "version": "1.0.0",
  "description": "Design system configuration for UI components",
  "colors": {
    "primary": {
      "50": "#E6F2FF",
      "100": "#CCE5FF",
      "200": "#99CCFF",
      "300": "#66B2FF",
      "400": "#3399FF",
      "500": "#0066CC",
      "600": "#004499",
      "700": "#003377",
      "800": "#002244",
      "900": "#001122"
    },
    "secondary": {
      "green": {
        "50": "#E8F5E8",
        "100": "#C3E6C3",
        "200": "#8BCA8B",
        "300": "#5FAE5F",
        "400": "#3C913C",
        "500": "#28A745",
        "600": "#1E7E34",
        "700": "#155724",
        "800": "#0D3A0F",
        "900": "#061D06"
      },
      "orange": {
        "50": "#FFF4E6",
        "100": "#FFE0B3",
        "200": "#FFCC80",
        "300": "#FFB84D",
        "400": "#FFA31A",
        "500": "#FD7E14",
        "600": "#E85D0C",
        "700": "#CA4A04",
        "800": "#A03B02",
        "900": "#702801"
      },
      "red": {
        "50": "#FFEBEE",
        "100": "#FFCDD2",
        "200": "#EF9A9A",
        "300": "#E57373",
        "400": "#EF5350",
        "500": "#DC3545",
        "600": "#C82333",
        "700": "#A71E2A",
        "800": "#8B1A1F",
        "900": "#6A1618"
      }
    },
    "neutral": {
      "50": "#F8F9FA",
      "100": "#E9ECEF",
      "200": "#DEE2E6",
      "300": "#CED4DA",
      "400": "#ADB5BD",
      "500": "#6C757D",
      "600": "#495057",
      "700": "#343A40",
      "800": "#212529",
      "900": "#000000"
    }
  },
  "typography": {
    "fontFamily": {
      "sans": [
        "Inter",
        "system-ui",
        "-apple-system",
        "BlinkMacSystemFont",
        "Segoe UI",
        "Roboto",
        "sans-serif"
      ],
      "mono": ["JetBrains Mono", "Consolas", "Monaco", "monospace"]
    },
    "fontSize": {
      "xs": ["0.6875rem", "0.875rem"],
      "sm": ["0.75rem", "1rem"],
      "base": ["0.875rem", "1.25rem"],
      "lg": ["1rem", "1.5rem"],
      "xl": ["1.125rem", "1.75rem"],
      "2xl": ["1.375rem", "1.75rem"],
      "3xl": ["1.75rem", "2.25rem"],
      "4xl": ["2.25rem", "2.75rem"],
      "5xl": ["3rem", "3rem"],
      "6xl": ["3.75rem", "3.75rem"]
    },
    "fontWeight": {
      "normal": "400",
      "medium": "600",
      "bold": "700"
    },
    "letterSpacing": {
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em"
    },
    "lineHeight": {
      "none": "1",
      "tight": "1.25",
      "snug": "1.375",
      "normal": "1.5",
      "relaxed": "1.625",
      "loose": "2"
    }
  },
  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem",
    "20": "5rem",
    "24": "6rem",
    "32": "8rem"
  },
  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "base": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
    "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)"
  },
  "components": {
    "button": {
      "padding": {
        "sm": "0.375rem 0.75rem",
        "md": "0.5rem 1rem",
        "lg": "0.75rem 1.5rem"
      },
      "fontSize": {
        "sm": "0.875rem",
        "md": "1rem",
        "lg": "1.125rem"
      },
      "fontWeight": "600",
      "borderRadius": "0.375rem",
      "transition": "all 150ms ease-in-out"
    },
    "card": {
      "padding": "1.5rem",
      "borderRadius": "0.5rem",
      "borderWidth": "1px",
      "borderColor": "neutral.300",
      "backgroundColor": "white",
      "shadow": "base"
    },
    "input": {
      "padding": "0.75rem 1rem",
      "fontSize": "0.875rem",
      "borderRadius": "0.375rem",
      "borderWidth": "1px",
      "borderColor": "neutral.300",
      "focusBorderColor": "primary.500",
      "focusRingColor": "primary.500",
      "focusRingWidth": "2px"
    },
    "modal": {
      "overlay": {
        "backgroundColor": "rgba(0, 0, 0, 0.5)"
      },
      "content": {
        "backgroundColor": "white",
        "borderRadius": "0.5rem",
        "shadow": "2xl",
        "maxWidth": {
          "sm": "24rem",
          "md": "28rem",
          "lg": "32rem",
          "xl": "36rem"
        }
      }
    }
  },
  "accessibility": {
    "focusRing": {
      "width": "2px",
      "color": "primary.500",
      "offset": "2px"
    },
    "reducedMotion": "respect",
    "contrastRatios": {
      "normal": 4.5,
      "large": 3.0
    }
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  }
}
