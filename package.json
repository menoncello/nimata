{
  "name": "nimata",
  "version": "0.1.0",
  "description": "AI-powered TypeScript project scaffolding CLI with built-in quality validation and automated fixes",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:mutation": "turbo run test:mutation",
    "test:performance": "turbo run test:performance",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "cli": "bun run apps/cli/src/index.ts",
    "bmad:rebuild": "./scripts/rebuild-bmad-agents.sh --all"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@stryker-mutator/core": "^9.2.0",
    "@stryker-mutator/typescript-checker": "^9.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.1.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.2",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.0",
  "dependencies": {
    "@types/bun": "^1.3.0",
    "zod": "^4.1.12"
  }
}
